<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView android:id="@+id/detailIncomeItemHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="item header"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"/>

    <TextView android:id="@+id/detailIncomeItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detailIncomeItemHeader"
        app:layout_constraintStart_toStartOf="parent"
        android:text="item detail"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"/>

    <TextView android:id="@+id/detailIncomeItemFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detailIncomeItem"
        app:layout_constraintStart_toStartOf="parent"
        android:text="item date footer"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginStart="15dp"/>

    <ImageView android:id="@+id/arrowIncome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/arrow"
        android:scaleType="fitXY"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:tint="@color/appBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>